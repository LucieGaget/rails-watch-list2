<div class="btn-list">
  <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class:"btn-green" %>
</div>

<h2 class="list-name"><%= @list.name %></h2>
<div class="movie-container">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card-movie">
    <img src="<%= bookmark.movie.poster_url %>" /><%  %>
    <div class="card-movie-infos">
      <div>
        <h2><%= bookmark.movie.title %></h2>
        <p>"<%= bookmark.comment %>"</p>
      </div>
    <%= link_to "Delete", bookmark_path(bookmark), class:"btn-red", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  </div>
  <% end %>

</div>

<div class="back-list">
  <%= link_to "Back to lists", lists_path , class:"btn-black" %>
</div>
